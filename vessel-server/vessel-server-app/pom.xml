<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.committed.vessel</groupId>
    <artifactId>vessel-server</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>vessel-server-app</artifactId>
  <packaging>jar</packaging>
  <name>Vessel Server Application</name>
  <description>Runnable, pluggable, Spring based Java server for Vessel</description>

  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-webflux</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-actuator</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.session</groupId>
      <artifactId>spring-session-core</artifactId>
    </dependency>

    <dependency>
      <groupId>io.committed.vessel</groupId>
      <artifactId>vessel-extensions</artifactId>
    </dependency>
        <dependency>
      <groupId>io.committed.vessel</groupId>
      <artifactId>vessel-core</artifactId>
    </dependency>
    <dependency>
      <groupId>io.committed.vessel</groupId>
      <artifactId>vessel-server-core</artifactId>
    </dependency>
        <dependency>
      <groupId>io.committed.vessel</groupId>
      <artifactId>vessel-server-data</artifactId>
    </dependency>
    <dependency>
      <groupId>io.committed.vessel</groupId>
      <artifactId>vessel-server-libs</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <!-- In order to run with external plugins on the classpath we 
            use the PropertiesLauncher, with has the loader.path configuration -->
          <layout>ZIP</layout>
          <!-- We want an exectuable service -->
          <executable>true</executable>

        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
      </plugin>


      <!-- TODO: I want to add a plugin directory to the manifest by default. 
        This works but its not picked up? <plugin> <groupId>org.apache.maven.plugins</groupId> 
        <artifactId>maven-jar-plugin</artifactId> <configuration> <archive> <manifestEntries> 
        <Class-Path>plugins/</Class-Path> </manifestEntries> </archive> </configuration> 
        </plugin> -->
    </plugins>
  </build>

</project>